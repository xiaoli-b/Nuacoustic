<Page x:Class="Nuacoustic.ExitPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Nuacoustic"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ExitPage">    

    <StackPanel Background="White">
        <Image Source="/images/nuairelogo1.jpg" Grid.Row="0" Grid.Column="0" Height="52" Margin="0,0,656,0"/>
        <Button x:Name="btnHome" Content="HOME" FontWeight="Bold" FontSize="22" Margin="637,0,36,0" Height="42" Click="btnHome_Click" />
        <TextBlock Text="THANK YOU" FontSize="26" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Separator></Separator>
        <TextBlock Text="Thank you for using Nuacoustic, you have been logged out." FontSize="26" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="15"/>
        <TextBlock Text="Please press the exit button to leave the application." FontSize="26" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="15"/>
    </StackPanel>
</Page>
